<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerlinks}}
    <title>Weather</title>
</head>

<body>
   {{>navbar}}
    <!-- main header -->

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 mx-auto">
                  <div class="main_content">
                      <form class="temp_form ff">
                          <input type="text" id="cityName" autocomplete="off" placeholder="Enter Your City Name">
                          <input type="submit" value="search" id="submitBtn">
                      </form>
                  </div>

                  <div class="temp_info">
                      <div class="top_layer">
                          <p id="day">Saturday</p>
                          <p id="today_date">11 NOV</p>
                      </div>
                      <div class="main_layer">
                          <p id="city_name">Get Output Here</p>
                          <div class="middle_layer data_hide">
                              <p ><span id="real">0</span><sup>o</sup>C</p>
                               <p id="temp_status"><i class="fas fa-sun" style="color: #eccc68"></i></p>
                          </div>
                      </div>
                  </div>
                  
            </div>
        </div>
    </div>
  <!-- foooter -->
 {{>footer}}

 <script src="./js/main.js"></script>
 <script>

     let days = document.getElementById('day');
     let todayd = document.getElementById('today_date');
     let currentday = ()=>{
    let weekdays = ['Sun','Mon','Tue','Wed','Thu','Fri','Sat'];
    let curday    = new Date();
    let day = weekdays[curday.getDay()];
return day;
};
days.innerHTML = currentday();

let currenttime = ()=>{
let now = new Date();
let arr = ['jan', 'feb','mar', 'april','may','june','july','aug','sep','oct','nov','dec'];
let month = arr[now.getMonth()];
let dat = now.getDate();
let time = `${dat}, ${month}`;
return time;
}
todayd.innerHTML = currenttime();
 </script>
</body>

</html>